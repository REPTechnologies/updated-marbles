<header class="fixedheader" style="overflow: hidden; margin:0px">
  <div class="container" id="dropdowncontainer">      
    <div class="col-sm-3 hidden-xs" id="dropdownphoto">
      <%= image_tag "marbles icon 4.nodisc.png"%>
    </div>
			<div id="links"><%= link_to "About", about_path %>
			</div>
    <div class="col-lg-11 col-md-10 col-sm-9 col-xs-12" id="headercontainer">

      <form id="topfixed2" class="form-inline" accept-charset="UTF-8" action="/users" class="new_user" data-remote="true" method="post">
            <input name="utf8" type="hidden" value="✓">

            <div id="email_group" class="form-group">
              <input id="user-email-fake" name="user[email]" type="text" class="form-control" placeholder="Email">
            </div>

            <input id="submit-fixed" class="btn btn-large btn-success" name="commit" type="fake" value="Get Early Access">
      </form>
        
        
    </div>
      
  </div>
</header>
<%= render "layouts/application/error_messages" %>


<section id="homebanner">
    <div class="container">
        <div id="toptext" class="col-md-12 text-center" style="margin-top: 20vh">
            <h2>feel good about yourself<br><br>have thoughts, relationships, and experiences that build you up<br><br>simply check-in and increase awareness with marbles.mx</h2>
            <form id="bottomfixed" class="form-inline text-center" accept-charset="UTF-8" action="/users" class="new_user" data-remote="true" method="post">
              <input name="utf8" type="hidden" value="✓">
            
              <div id="email_group" class="form-group">
                <input id="user-email-main" name="user[email]" type="text" class="form-control" placeholder="Email">
              </div>
            
              <input id="submit-main" class="btn btn-large btn-success" name="commit" type="submit" value="Get Early Access" style="margin-top:7.5px">
        </form>
 
        </div>
    </div>
</section>
<!--Section2------------------------------------------------ -->
<section id="thesis" style="overflow: hidden; margin:0px">
  <div>
    <h1 id="personalGuide">Your personal guide to mental health and wellbeing</h1>
  </div>
  <div id="orbs">
		<div class="container12">
		  <div class="row" id="circles">                    
				<div class="column3 center-icons">
          <div id="balance">
            <%= image_tag "balance.svg"%>
          </div>
          <span>Balance</span>
          <p id="span1">Organize your thoughts, feelings, and emotions to live optimally</p>
					</div>           
					<div class="column3 center-icons">
            <div id="find">
              <%= image_tag "find.svg"%>
            </div>
					  <span>Find</span>
            <p id="span2">Discover things to do in your community based on what will help you the most</p>
					</div>
					<div class="column3 center-icons">
            <div id="share">
                <%= image_tag "share.svg"%>
            </div>
					   <span>Share</span>
            <p id="span3">Add diversity to your events by sharing them across campus</p>
					</div>
          <div class="column3 center-icons">
            <div id="dial">
              <%= image_tag "track.svg"%>
            </div>
					  <span>Track</span>
            <p id="span4">Identify and track how you and your community are growing </p>
					</div>
				</div>
			</div>
		</div>
</section>


