    <%= javascript_include_tag ('lib/bxslider/jquery.mousewheel.min.js') %> 
    <script type="text/javascript">
          $(document).ready(function(){
               var main_slider = $('#main-slider').bxSlider({
                    mode: 'vertical',
                    slideMargin: 5,
                    auto : true,
               });
               
               $('#main-slider').mousewheel(function(event, delta, deltaX, deltaY) {
                    if (delta > 0) {
                         main_slider.goToPrevSlide();
                    }
                    if (deltaY < 0){
                         main_slider.goToNextSlide();
                    }
                    event.stopPropagation();
                    event.preventDefault();
               });
          });
          
          
     </script>
